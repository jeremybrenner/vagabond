<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<style type="text/css">

#post_place_id {
	  margin: 8px 0 8px 16px;
}

</style>
<body>
<%= render "/show/navbar"  %>
    <%= form_for @post, html: {class: "form-horizontal form-top"} do |f| %>
			  <div class="form-group">
			    <label for="inputTitle3" class="col-sm-2 control-label">Title</label>
		    	<div class="col-sm-10">
			    		<%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
			    </div>
			  </div>
		  
			  <!-- dropdown begin -->
			  
			  <div class="form-group dropdown">
			  	<label for="inputTitle3" class="col-sm-2 control-label">Select a city</label>
			
			  	<div class="controls">
			  		<%= f.select(:place_id, options_for_select([['San Francisco', 1], ['Oakland', 2], ['San Jose', 3]])) %>
			  	</div>
			  </div>	

				<!-- dropdown end -->

			  <div class="form-group">
			    <label for="inputBody3" class="col-sm-2 control-label">Body</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_area :body, placeholder: "Enter description", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">

			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			  		<%= f.submit "Sumbit", class: "btn btn-default" %>
			    </div>
			  </div>
			
		<% end %>   
</body>
</html>


