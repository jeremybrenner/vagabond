<%= render "/show/navbar"  %>
    <%= form_for @post, html: {class: "form-horizontal form-top"} do |f| %>
			  <div class="form-group">
			    <label for="inputTitle3" class="col-sm-2 control-label">Title</label>
		    	<div class="col-sm-10">
			    		<%= f.text_field :title, placeholder: "Enter title", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputBody3" class="col-sm-2 control-label">Body</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_area :body, placeholder: "Enter description", class: "form-control" %>
			    </div>
			  </div>

			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			  		<%= f.submit "Edit", class: "btn btn-default" %>
			    </div>
			  </div>
			
				<% end %>  