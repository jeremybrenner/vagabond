<h1>Welcome, <%= @user.first_name %>.</h1>

<%= form_for @user, url: "/users/#{@user.id}/update", method: "post" do |f| %>

  <div>
    <%= f.text_field :first_name, value: "@user[:first_name]" %>
  </div>

  <div>
    <%= f.text_field :last_name, value: "@user[:last_name]" %>
  </div>

  <div>
    <%= f.text_field :email, value: "@user[:email]" %>
  </div>

  <div>
    <%= f.password_field :email, placeholder: "password" %>
  </div>

  <%= f.submit "Update" %>
  
<% end %>
